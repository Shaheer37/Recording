<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/recordingPrimary</item>
        <item name="colorPrimaryDark">@color/recordingPrimaryDark</item>
        <item name="colorAccent">@color/darkBlue</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@android:color/white</item>
    </style>

    <style name="Recording.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/lightBlue</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/grey</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryDark">@color/middleBlue</item>
        <item name="colorAccent">@color/lightBlue</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/darkBlue</item>
    </style>

</resources>
