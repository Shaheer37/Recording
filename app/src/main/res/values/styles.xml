<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
<!--        <item name="colorPrimary">@color/middleBlue</item>-->
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/lightBlue</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColor">@color/textcolor</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/isBarLight</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@bool/isBarLight</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/grey</item>

        <item name="md_color_button_text">@color/primaryDark</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:background">@color/background</item>
        <item name="theme">@style/ThemeOverlay.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.ActionBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorPrimary">@color/textcolor</item>
    </style>

</resources>
